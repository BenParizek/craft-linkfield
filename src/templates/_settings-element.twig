{% import "_includes/forms" as forms %}

{{ forms.checkboxSelectField({
  label: '{elementName} sources'|t('typedlinkfield', { 'elementName': linkType.displayName }),
  instructions: 'Select the available sources.'|t('typedlinkfield'),
  id: "typeSettings-#{linkType.name}-sources",
  name: "typeSettings[#{linkType.name}][sources]",
  options: linkType.availableSources,
  values: linkType.sources,
  showAllOption: true,
})}}

{{ forms.checkboxField({
  label: 'Allow users to enter custom queries that will be appended to the url'|t('typedlinkfield'),
  name: 'allowCustomQuery',
  id: "typeSettings-#{linkType.name}-allowCustomQuery",
  name: "typeSettings[#{linkType.name}][allowCustomQuery]",
  checked: linkType.allowCustomQuery
}) }}

{{ forms.checkboxField({
  label: 'Allow links to reference a different site'|t('typedlinkfield'),
  name: 'allowCrossSiteLink',
  id: "typeSettings-#{linkType.name}-allowCrossSiteLink",
  name: "typeSettings[#{linkType.name}][allowCrossSiteLink]",
  checked: linkType.allowCrossSiteLink
}) }}
